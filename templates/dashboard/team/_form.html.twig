{{ form_start(form) }}
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label for="exampleInputEmail1">Nom</label>
				{{ form_row(form.firstName) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				<label for="exampleInputEmail1">Pr√©nom</label>
				{{ form_row(form.lastName) }}
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label for="exampleInputEmail1">Email</label>
				{{ form_row(form.email) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				<label for="exampleInputEmail1">Fonction (Role)</label>
				{{ form_row(form.role) }}
			</div>
		</div>
